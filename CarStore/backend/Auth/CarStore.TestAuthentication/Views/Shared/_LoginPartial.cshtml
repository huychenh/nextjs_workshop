<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        string username = User.Claims.FirstOrDefault(k => k.Type == "name") != null ? User.Claims.FirstOrDefault(k => k.Type == "name").Value : "LoggedIn User";
        string role = User.Claims.FirstOrDefault(k => k.Type == "role") != null ? User.Claims.FirstOrDefault(k => k.Type == "role").Value : "Guest";

        <li class="nav-item">
            <a id="manage" class="nav-link text-dark">Hello <strong>@username | @role</strong></a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Home" asp-action="Logout">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark" title="Sign out">
                    <img src="~/img/SignOut.png" alt="Sign out" />
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Authenticate" title="Sign in">
                <img src="~/img/SignIn.png" alt="Sign in" />
            </a>
        </li>
    }
</ul>
