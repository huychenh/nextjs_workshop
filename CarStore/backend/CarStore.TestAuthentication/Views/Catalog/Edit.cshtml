@model CatalogViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Catalog</h1>
<br />

<div class="row">
    <form asp-action="Edit">
        <dl class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <dt class="col-sm-2">
                <span style="float:right">
                    <label asp-for="Id" class="control-label">Id:</label>
                </span>
            </dt>
            <dd class="col-sm-10">
                @Model.Id
                <input type="hidden" asp-for="Id" />
            </dd>
            <dt class="col-sm-2">
                <span style="float:right">
                    <label asp-for="Name" class="control-label"></label>:
                </span>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Name" class="form-control" maxlength="200" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                <span style="float:right">
                    <label asp-for="Description" class="control-label"></label>:
                </span>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Description" class="form-control" maxlength="500" />
            </dd>
            <dt class="col-sm-2">
                <span style="float:right">
                    <label asp-for="CreatedDate" class="control-label"></label>:
                </span>
            </dt>
            <dd class="col-sm-10">
                @CarStoreDataHelper.GetDateTimeFormat(Model.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                <span style="float:right">
                    <label asp-for="CreatedBy" class="control-label"></label>:
                </span>
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedBy
            </dd>
            <dt class="col-sm-2">
                <span style="float:right">
                    <label asp-for="ModifiedDate" class="control-label"></label>:
                </span>
            </dt>
            <dd class="col-sm-10">
                @CarStoreDataHelper.GetDateTimeFormat(Model.ModifiedDate)
            </dd>
            <dt class="col-sm-2">
                <span style="float:right">
                    <label asp-for="ModifiedBy" class="control-label"></label>:
                </span>
            </dt>
            <dd class="col-sm-10">
                @Model.ModifiedBy
            </dd>
            <dt class="col-sm-2">
                <span style="float:right">
                    <label asp-for="IsActive" class="control-label"></label>:                    
                </span>
            </dt>
            <dd class="col-sm-10">
                <input type="checkbox" asp-for="IsActive" name="IsActive" />
            </dd>
            <dt class="col-sm-2">
                <span style="float:right">
                    <label asp-for="IsDeleted" class="control-label"></label>:
                </span>
            </dt>
            <dd class="col-sm-10">
                <input type="checkbox" asp-for="IsDeleted" name="IsDeleted" />
            </dd>

            <dt class="col-sm-2">
                &nbsp;
            </dt>
            <dd class="col-sm-10">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </dd>
        </dl>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
